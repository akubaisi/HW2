<h1>Listing vaccines</h1>

<table id="vaccines">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Animal</th>
    <th>Duration</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vaccines.each do |vaccine| %>
  <tr>
    <td><%= vaccine.id %></td>
    <td><%= vaccine.name %></td>
    <td><%= vaccine.animal_id %></td>
    <td><%= vaccine.duration %></td>
    <td><%= link_to 'Show', vaccine %></td>
    <td><%= link_to 'Edit', edit_vaccine_path(vaccine) %></td>
    <td><%= link_to 'Destroy', vaccine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

